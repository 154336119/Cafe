<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/beijing_zhifufangshi"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px">
        <ImageView
            android:id="@+id/IvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <ImageView
            android:id="@+id/IvHanYu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hanyu_dingbu"
            android:layout_marginLeft="35px"/>
        <ImageView
            android:id="@+id/IvZhongWen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:src="@mipmap/zhongwen_dingbu"/>
        <ImageView
            android:id="@+id/IvYingYu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yingyu_dingbu"
            android:layout_toRightOf="@id/IvZhongWen"
            android:layout_marginLeft="35px"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/IvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_shouye"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300px"/>
    <TextView
        android:id="@+id/TvSuccessTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/com_txt_color"
        android:textSize="@dimen/tv_com_35"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="恭喜您，支付成功!\n请耐心等待您的佳肴"
        android:lineSpacingExtra="@dimen/dp_10"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/LLWaiMai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TvFoodNumTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/com_txt_color"
            android:textSize="@dimen/tv_com_35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="你的取餐码是："
            android:lineSpacingExtra="@dimen/dp_10"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/TvFoodNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/com_txt_color"
            android:textSize="120sp"
            android:layout_gravity="center_horizontal"
            android:text="005"/>
    </LinearLayout>

</LinearLayout>