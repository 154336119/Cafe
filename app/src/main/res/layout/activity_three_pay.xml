<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing_zhifufangshi"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px">
        <ImageView
            android:id="@+id/IvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <ImageView
            android:id="@+id/IvHanYu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hanyu_dingbu"
            android:layout_marginLeft="35px"/>
        <ImageView
            android:id="@+id/IvZhongWen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:src="@mipmap/zhongwen_dingbu"/>
        <ImageView
            android:id="@+id/IvYingYu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yingyu_dingbu"
            android:layout_toRightOf="@id/IvZhongWen"
            android:layout_marginLeft="35px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/beijing_zhifufangshi_three"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TvAccountSmallTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_com_50"
            android:text="订单金额小计"
            android:textColor="@color/com_txt_color"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/TvTotalAccountTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/com_txt_color"/>
            <TextView
                android:id="@+id/TvTotalAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/color_green"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RlScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/TvScoreTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分抵扣"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/com_txt_color"/>
            <TextView
                android:id="@+id/TvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/color_yellow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RlCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/TvCouponTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券抵扣"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/com_txt_color"/>
            <TextView
                android:id="@+id/TvCoupun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/color_yellow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            android:layout_marginTop="40dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/TvRealAccountTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付金额"
                android:textSize="@dimen/tv_com_35"
                android:textColor="@color/com_txt_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/TvRealAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="@dimen/tv_com_45"
                android:textColor="@color/color_green"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/TvPayTypeTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textSize="@dimen/tv_com_35"
            android:textColor="@color/com_txt_color"
            android:layout_marginTop="140dp"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"/>
            <RelativeLayout
                android:id="@+id/RlShadow"
                android:layout_width="300dp"
                android:layout_height="300dp">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:scaleType="fitCenter"
                    android:background="#80000000"/>
                <TextView
                    android:id="@+id/TvShadow"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tv_com_25"
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@mipmap/shuaxinerweima"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="二维码已失效\n点击刷新"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>